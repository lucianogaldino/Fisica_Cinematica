print('='*28)
print('CÁLCULO DA VELOCIDADE MÉDIA')
print('='*28)
print('ORIENTAÇÕES:\n'
      '1) Utilizar os valores com unidades de medidas no SI.\n'
      '2) Colocar ponto de interrogação (?) na grandeza que se deseja calcular.')
print()
vm = str(input(f'Digite a velocidade média em m/s: ')).strip()
ds = str(input(f'Digite a variação da posição em m: ')).strip()
dt = str(input(f'Digite a variação do tempo em s: ')).strip()

if vm == '?':
    ds = float(ds)
    dt = float(dt)
    vm = ds / dt
    print(f'A velocidade média é de {vm} m/s')
elif ds == '?':
    vm = float(vm)
    dt = float(dt)
    ds = vm * dt
    print(f'A variação da posição é de {ds} m')
elif dt == '?':
    vm = float(vm)
    ds = float(ds)
    dt = ds / vm
    print(f'O intervalo de tempo é de {dt} s')
else:
    print('ERRO na digitação dos dados:')

